                            on_active: root.on_checkbox_active(self, self.active, "ajio")
                    Image:
                        source:"logo/ajio_logo.png"
                        size_hint_y: 2.5


<Search>
    name: "search"
    BoxLayout:
        canvas:
            Color:
                rgb: [0.1, .1, .2]
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        RelativeLayout:
            MDIconButton:
                icon: 'keyboard-backspace'
                # size_hint: 0.5, 0.5
                pos_hint: {"center_x": 0.04, "center_y": 0.91}
                on_release:
                    app.root.current = "screenui"
                    root.manager.transition.direction = "right"
            MDTextFieldRect:
                id: product
                # hint_text: "ENTER PRODUCT NAME "
                font_size: 18
                multiline: False
                size_hint: 0.8, 0.0575
                pos_hint: {"center_x": 0.48, "center_y": 0.91}
                on_text_validate : root.on_proceed()
            MDIconButton:
                icon: 'file-find'
                size_hint: 0.15, 0.15
                pos_hint: {"center_x": 0.925, "center_y": 0.91}
                on_release : root.on_proceed()

            BoxLayout:
                orientation: 'vertical'
                size_hint: 1.08, 0.85
                pos_hint: {"center_x": 0.5}
                ScrollView:
                    scroll_type:['bars']
                    scroll_wheel_distance : 250
                    bar_height : 45
                    bar_width: 42
                    bar_color: 1, 0, 0, 1   # red
                    bar_inactive_color: 0.1, 1, 0.1, 1   # green
                    effect_cls: "ScrollEffect"
                    pos_hint : {"center" : 1, "top" : 1}
                    BoxLayout:
                        id: scroll_list
                        spacing: 10
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height



<RunningPopup>:
    title: "LOADING !!"
    size_hint: 0.5, 0.45
    auto_dismiss: False
    BoxLayout:
        Image:
            size: root.width, root.height/1.35
            source: 'loading.gif'
            allow_stretch: True
            keep_ratio: False
            # size_hint_y: None
            anim_delay: 0.05
            mipmap: True

